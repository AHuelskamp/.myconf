#!/usr/bin/python

# Usage: current word with Xs and then valid letters
# e.g. wordle XELLX "HOWRLD"

import sys

args = sys.argv[1:]

if len(args) != 2:
    print('no')
    exit()

word, letters = args
word = word.upper()
letters = set(letters.upper())

# for now, only working wiht 2 x's
if word.count("X") != 2:
    print('not a valid guess')
    exit()


wordToFormat = word.replace("X", "{}")

# Could do this with a combination to make the number of X's change dynamically
for x in letters:
    for y in letters:
        print(wordToFormat.format(x,y))



