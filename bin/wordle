#!/usr/bin/python

# Usage: current word with Xs and then valid letters
# e.g. wordle XELLX "HOWRLD"

import itertools
import sys

args = sys.argv[1:]

if len(args) != 2:
    print('no')
    exit()

word, letters = args
word = word.upper()
letters = set(letters.upper()) | set(word)

# for now, only working wiht 2 x's
numXs = word.count("X")
wordToFormat = word.replace("X", "{}")


for guess in itertools.combinations(letters, numXs):
    print(wordToFormat.format(*guess))



